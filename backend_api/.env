# Sunucu Konfigürasyonu
NODE_ENV=development
PORT=8080

# Veritabanı Konfigürasyonu
DB_HOST=localhost
DB_PORT=5432
DB_NAME=stok_takibi
DB_USER=postgres
DB_PASSWORD=password
DB_SSL=false

# Test Veritabanı
DB_NAME_TEST=stok_takibi_test

# CORS Konfigürasyonu
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8080

# JWT Konfigürasyonu (gelecekte kullanım için)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# File Upload (gelecekte kullanım için)
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads/

# Email Konfigürasyonu (gelecekte kullanım için)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Redis Konfigürasyonu (gelecekte kullanım için)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Backup Konfigürasyonu
BACKUP_PATH=backups/
BACKUP_RETENTION_DAYS=30

# API Konfigürasyonu
API_VERSION=v1
API_PREFIX=/api

# Güvenlik
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-this-in-production

# Monitoring (gelecekte kullanım için)
MONITORING_ENABLED=false
MONITORING_ENDPOINT=http://localhost:9090

# Cache (gelecekte kullanım için)
CACHE_TTL=3600
CACHE_ENABLED=false